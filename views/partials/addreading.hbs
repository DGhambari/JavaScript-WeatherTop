<form class="ui stacked segment form" action="/station/{{station.id}}/addReading" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="Code" type="number" name="code" min="100" max="800">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="Temperature" type="number" step="0.01" name="temperature" min="-50" max="80">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="Wind Speed" type="number" step="0.01" name="windSpeed" min="0" max="170">
    </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="Wind Direction" type="number" name="windDirection" min="0" max="360">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="Pressure" type="number" name="pressure" min="900" max="1100">
    </div>
  </div>
  <button class="ui blue submit button">Add Reading</button>
</form>